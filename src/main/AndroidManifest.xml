<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    package="com.example.lbf.imatationofwechat">
    <!--网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 监听网络的变化 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!-- 设备休眠 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- sd卡存储-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--摄像头-->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--录音-->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--通知震动-->
    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:name="com.example.lbf.imitationofwechat.BmobIMApplication"
        android:allowBackup="true"
        android:icon="@mipmap/wechat_icon"
        android:logo="@mipmap/wechat_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name="com.example.lbf.imitationofwechat.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.lbf.imitationofwechat.module.login.LoginActivity"/>
        <activity android:name="com.example.lbf.imitationofwechat.module.register.RegisterActivity"/>
        <activity android:name="com.example.lbf.imitationofwechat.module.main.MainActivity"/>
        <activity android:name="com.example.lbf.imitationofwechat.module.search.SearchActivity"
            android:parentActivityName="com.example.lbf.imitationofwechat.module.main.MainActivity">
        </activity>
        <activity android:name="com.example.lbf.imitationofwechat.module.follow.FollowActivity"
            android:parentActivityName="com.example.lbf.imitationofwechat.module.main.MainActivity">
        </activity>
        <activity android:name="com.example.lbf.imitationofwechat.module.searchLocalAccount.SearchLocalAccountActivity"
            android:parentActivityName="com.example.lbf.imitationofwechat.module.search.SearchActivity"
            android:theme="@style/Transparent">
        </activity>
        <activity android:name="com.example.lbf.imitationofwechat.module.chat.ChatActivity"
            android:windowSoftInputMode="adjustResize"
            android:launchMode="singleTask"
            android:parentActivityName="com.example.lbf.imitationofwechat.module.main.MainActivity"/>
        <activity android:name="com.example.lbf.imitationofwechat.module.chooseImage.ChooseImageActivity"/>
        <activity android:name="com.example.lbf.imitationofwechat.module.imageDetail.ImageDetailActivity"/>
        <activity android:name="com.example.lbf.imitationofwechat.module.moments.MomentsActivity"
            android:parentActivityName="com.example.lbf.imitationofwechat.module.main.MainActivity"
            android:windowSoftInputMode="adjustResize"
            />
        <activity android:name="com.example.lbf.imitationofwechat.module.shake.ShakeActivity"
            android:parentActivityName="com.example.lbf.imitationofwechat.module.main.MainActivity"/>
        <activity android:name="com.example.lbf.imitationofwechat.module.shakeSetting.ShakeSettingActivity"
            android:parentActivityName="com.example.lbf.imitationofwechat.module.shake.ShakeActivity"/>
        <activity android:name="com.example.lbf.imitationofwechat.module.userInfo.UserInfoActivity"/>
        <activity android:name="com.example.lbf.imitationofwechat.module.searchUser.SearchUserActivity"
            android:parentActivityName="com.example.lbf.imitationofwechat.module.main.MainActivity"/>
        <activity android:name="com.example.lbf.imitationofwechat.module.newFriend.NewFriendActivity"/>
        <activity android:name="com.example.lbf.imitationofwechat.module.personalInfo.PersonalInfoActivity"/>
        <activity android:name="com.example.lbf.imitationofwechat.module.changeText.changeTextActivity"/>
        <receiver android:name="cn.bmob.newim.core.ConnectChangeReceiver" >
            <intent-filter>
                <action android:name="cn.bmob.action.RECONNECT" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
        <service
            android:name="cn.bmob.newim.core.service.BmobIMService"
            android:process=":bmobcore" />
        <service
            android:name="cn.bmob.newim.core.service.NotifyService"
            android:process=":bmobcore" />
        <service android:name="cn.bmob.newim.core.service.ReConnectService" />
        <service android:name="cn.bmob.newim.core.service.HeartBeatService" />

        <meta-data
            android:name="Bmob_APP_KEY"
            android:value="25de95c2305f4d5543852b4f94f16018" />
    </application>

</manifest>